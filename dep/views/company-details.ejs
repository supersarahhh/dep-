<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: `${company.name} | dep `}) %>
    <link rel="stylesheet" href="/styles/company-details.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <div>
        <img src="<%= company.photo %>">

        <h2 class="company-name"><%= company.name %></h2>

        <section>
            <p><strong>Company Name:</strong> <%= company.name %></p>
            <p><strong>About:</strong> <%= company.about %></p>
            <p><strong>Rating:</strong> <%= company.rating %></p>
            <p><strong>Location:</strong> <%= company.location %></p>
        </section>

        <section class="actions">
            <button class="btn"><a href="/companies/<%= company._id %>/edit">Edit</a></button>
            <form method="POST" action="/companies/<%= company._id %>?_method=DELETE">
                <input class="btn" type="submit" value="Delete" />
            </form>
            <button class="btn"><a href="/reviews/new/<%= company._id %>">Adopt</a></button>
        </section>

    </div>

    <%- include('./partials/footer.ejs') %>
</body>

</html>