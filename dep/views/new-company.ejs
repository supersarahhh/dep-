<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: 'Add a Company | dep Partners'}) %>
    <link rel="stylesheet" href="/styles/new-company.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Ysabeau+SC:wght@1;500&display=swap');
        </style>
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <section class="hero">
        <h2>Add to Listing</h2>
        <h4><i>....</i></h4>
    </section>

    <form class="form" method="POST" action="/companies">

        <label for="name">Company Name:</label>
        <input type="text" id="name" name="name" required>
        <br>
        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating">
        <br>
        <label for="location">HQ:</label>
        <input type="text" id="location" name="location" required>
        <br>
       
        <label for="photo">Photo (URL):</label>
        <input type="text" id="photo" name="photo" required>
        <br>
        <label for="about">About:</label>
        <textarea id="about" name="about" required></textarea>
        <br>
        <input class="submit" type="submit" value="Create Listing">
    </form>

    <%- include('./partials/footer.ejs') %>
